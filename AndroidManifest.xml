<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.mms_projects.copyit"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="net.mms_projects.copyit.app.AndroidApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.mms_projects.copyit.ui.android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="message/*" />
                <data android:mimeType="multipart/*" />
                <data android:mimeType="text/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.mms_projects.copyit.ui.android.BrowserLoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="net.mms_projects.copyit.ui.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mms_projects.copyit.ui.android.MainActivity" />
        </activity>
        <activity
            android:name="net.mms_projects.copyit.ui.android.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="net.mms_projects.copyit.ui.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mms_projects.copyit.ui.android.MainActivity" />
        </activity>
        <activity
            android:name="net.mms_projects.copyit.ui.android.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="net.mms_projects.copyit.ui.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mms_projects.copyit.ui.android.MainActivity" />

            <intent-filter>
                <action android:name="net.mms_projects.copyit.ui.android.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.mms_projects.copyit.ui.android.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:parentActivityName="net.mms_projects.copyit.ui.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mms_projects.copyit.ui.android.MainActivity" />
        </activity>
    </application>

</manifest>